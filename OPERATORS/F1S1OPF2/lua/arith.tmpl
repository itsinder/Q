return require 'Q/UTILS/lua/code_gen' {

   declaration = [[

#include "q_types.h"
#include "q_macros.h"
#include <unistd.h>
#include <stdint.h>

extern int
${fn}(  
      const ${fldtype} * restrict in,  
      uint64_t nR,
      ${scalar_ctype} *ptr_sval,
      ${out_ctype} * out
      ) 
;

   ]],
   definition = [[

#include "_${fn}.h"

static void __operation(
  ${fldtype} a,
  ${scalar_ctype} b,
  ${out_ctype} *ptr_c
  )
{
  ${fldtype} c;
  ${c_code_for_operator}
  *ptr_c = c;
}

int
${fn}(  
      const ${fldtype} * restrict in,
      uint64_t nR,  
      ${scalar_ctype} *ptr_sval,
      ${out_ctype} * out
      )

{
  int status = 0;
  ${fldtype} inv; 
  ${out_ctype} outv; 
  ${scalar_ctype} sval = *ptr_sval;

#pragma omp parallel for 
  for ( uint64_t i = 0; i < nR; i++ ) { 
    inv = in[i];
    __operation(inv, sval, &outv);
    out[i] = outv;
  } 
  return status;
}
   ]]
}
