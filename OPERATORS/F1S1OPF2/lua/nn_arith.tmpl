      __operation(inv, sval, &outv, &nn_out_i);
      out[i] = outv;
    }
    else {
      nn_out_i = 0;
      out[i] = 0;
      num_null++;
    }
    mcr_set_bit_val(nn_out[widx], bidx, nn_out_i);
  } 
  *ptr_num_null += num_null;
  BYE:
  return status;
